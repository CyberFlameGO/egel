# A small state monad example.

import "prelude.eg"

namespace Calculate (

    def return = [ A S -> (A,S) ]

    def >>== = [ F G S -> [(A,S) -> G A S] (F S) ]

    def put = [ X S -> (System:none, X) ]

    def get = [ S -> (S, S) ]

    def run = [ F S -> [(A,S) -> S] (F S) ]

)

using Calculate
using System

def main = 
    run (return 1 >>== \A -> put (A+3) >>== \_ -> get ) 0
